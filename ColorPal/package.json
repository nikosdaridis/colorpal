{
  "scripts": {
    "dev-watch": "concurrently \"npm run typescript-watch\" \"npm run tailwind-watch\"",
    "typescript-build": "npx tsc",
    "typescript-watch": "npx tsc --watch",
    "typescript-release": "npx tsc && node ./wwwroot/JavaScript/uglify.js",
    "tailwind-build": "cross-env NODE_ENV=development npx tailwindcss -i ./wwwroot/CSS/tailwind.css -o ./wwwroot/CSS/appTailwind.css",
    "tailwind-watch": "cross-env NODE_ENV=development npx tailwindcss -i ./wwwroot/CSS/tailwind.css -o ./wwwroot/CSS/appTailwind.css --watch",
    "tailwind-release": "cross-env NODE_ENV=production npx tailwindcss -i ./wwwroot/CSS/tailwind.css -o ./wwwroot/CSS/appTailwind.css --minify"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tailwindcss": "^3.4.14",
    "cross-env": "^7.0.3",
    "glob": "^11.0.0",
    "concurrently": "^9.0.1",
    "uglify-js": "^3.19.3",
    "@types/chrome": "^0.0.278"
  },
  "include": [
    "./wwwroot/TypeScript/**/*.ts"
  ]
}
